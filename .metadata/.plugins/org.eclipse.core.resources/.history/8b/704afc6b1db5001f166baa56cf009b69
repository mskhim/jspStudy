/* 제목과 내용 텍스트 스타일 */
form h2 {
  font-size: 18px; /* 글씨 크기 */
  color: #333; /* 글씨 색상 */
  margin-bottom: 10px; /* 아래쪽 여백 */
}

/* 텍스트 입력 필드 스타일 */
form .title,
form .text {
  width: 100%; /* 전체 너비 */
  padding: 10px 15px; /* 안쪽 여백 */
  font-size: 16px; /* 글씨 크기 */
  border: 1px solid #ccc; /* 얇은 테두리 */
  border-radius: 5px; /* 둥근 모서리 */
  background-color: #fff; /* 배경색 */
  box-sizing: border-box; /* 테두리와 패딩 포함 크기 */
  transition: all 0.3s ease; /* 부드러운 애니메이션 */
  outline: none; /* 포커스 시 기본 외곽선 제거 */
}

/* 텍스트 입력 필드 포커스 스타일 */
form .title:focus,
form .text:focus {
  border-color: #007acc; /* 포커스 시 테두리 색상 */
  box-shadow: 0 0 5px rgba(0, 122, 204, 0.5); /* 포커스 시 그림자 */
}

/* 텍스트 영역 추가 스타일 */
form .text {
  min-height: 150px; /* 텍스트 박스 최소 높이 */
  resize: vertical; /* 세로 크기 조절 가능 */
}

